<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_personImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/green"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:minHeight="50dp"
        android:layout_toRightOf="@id/message_personImage"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message_person"
                android:layout_alignParentLeft="true"
                android:text="+8615958102642"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/message_time"
                android:text="15:39"
                android:textSize="15sp"
                android:paddingBottom="2dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/message_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/message_content"
            android:text="你好，我是京东商城快递。请务必。。"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
